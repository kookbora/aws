<style>
    body {
        margin-top: 180px;
    }
</style>
<div class="container" style="margin-top: 30px;" align="center">
    <h2><%= @one_question.today %></h2>
<br>
    <hr color="#FF6347">

    <br>
        <% @one_question.memos.each do |m| %>
         <p>
             <% unless m.image_url.empty? %>
              <img src="<%=m.image_url%>" width="100" height="100">
            <% end %> </p>
          <p><%= m.content %>
          <% if m.likes.empty? %>
              <a href="/<%= m.id %>/like"> ♡</a>
          <% else %> 
              <% m.likes.each do |l| %>
                  <a href="/<%= m.id %>/like/<%= l.id %>"> ♡</a>
                    <%= l.like_count %>
              <% end %>        
          <% end %>
          <a href="/memo_destroy/<%= m.id %>"> X</a></p>
          <% end %>
          <br>
     
</div>